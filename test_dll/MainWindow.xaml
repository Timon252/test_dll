<Window x:Class="test_dll.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test_dll"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tb1" Width="200" Height="50" Margin="0 0 300 0"/>
        <TextBox x:Name="tb2" Width="200" Height="50" Margin="300 0 0 0"/>
        <Button Grid.Row="1" Width="200" Height="50" x:Name="btn1" Click="btn1_Click"  />
    </Grid>
</Window>
